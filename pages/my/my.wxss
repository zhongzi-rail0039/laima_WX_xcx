/* pages/my/my.wxss */
@import '../basestyle/FlexStyle.wxss';
.my-hd {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.my-logo image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 2px solid #d7d7d7;
  background-color: #f3f3f3;
  vertical-align: middle;
}

.my-login {
  font-size: 18px;
  font-weight: 700;
  color:#000;
  overflow:hidden;
  margin-left: -20rpx;
  background-color: #ffffff;
  vertical-align: middle;
}

.my-login::after{
  border: 0;
}

.my-menu {
  background-color: #ffffff;
}

.my-menuItem {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333333;
  padding-left: 28rpx;
  position: relative;
  vertical-align: middle;
}

.my-menuItem::before {
  content: '';
  position: absolute;
  left: 25rpx;
  bottom: 0;
  height: 1px;
  background-color: #ececec;
  right: 0;
}

.my-menuItem:last-child::before {
  display: none
}

.my-menuItem::after {
  content: '';
  width: 16rpx;
  height: 25rpx;
  background: url('http://sysweet-demo.oss-cn-beijing.aliyuncs.com/laima/images/icon-arrow.png?1') right center no-repeat;
  background-size: 100%;
  position: absolute;
	right: 30rpx;
	top: 34rpx
}

.my-dl-center {
  width: 100%;
  height: 90rpx;
  display: block;
  line-height: 90rpx;
  color: #F8195D;
  font-size: 32rpx;
  text-align: center;
  margin-top: 40rpx;
  background-color: #fff;
}

.my-menuItem .iconfont {
  /* font-size: 36rpx; */
