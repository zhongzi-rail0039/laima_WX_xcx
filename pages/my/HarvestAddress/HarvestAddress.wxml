<!-- pages/my/HarvestAddress/HarvestAddress.wxml -->
<view class="tui-map">
  <map id="map" latitude="{{currentLo}}" latitude="{{currentLa}}" scale="{{scale}}" markers="{{markers}}" polyline="{{polyline}}" include-points="{{includePoints}}" show-location style="width: 100%; height: 100%" />
</view>
<view class="tui-map-search" bindtap="getAddress">
  <icon size="20" type="search" class="tui-map-search-icon" />
  <input class="tui-map-input" placeholder="搜索" focus="{{focusStatus}}" />
</view>
<view class="tui-search-bottom {{show ? '' : 'tui-hide'}}">
  <view class="page-group">
    <view class="page-nav-list {{statusType == 'car' ? 'active' : ''}}" data-type="car" bindtap="goTo">
      驾车
    </view>
    <view class="page-nav-list {{statusType == 'walk' ? 'active' : ''}}" data-type="walk" bindtap="goTo">
      步行
    </view>
    <view class="page-nav-list {{statusType == 'ride' ? 'active' : ''}}" data-type="ride" bindtap="goTo">
      骑行
    </view>
  </view>
  <view class="tui-warn">{{duration}}分钟</view>
</view>